{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table table-striped"; style="width:50%">
        <tbody>
            <tr>
                <th scope="col">Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>mot de passe</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>nom</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>description</th>
                <td>{{ user.biography }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.address }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.city }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ user.zipCode }}</td>
            </tr>
            <tr>
                <th>date de naissance </th>
                <td>{{ user.birthDate ? user.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.nickname }}</td>
            </tr>
            <tr>
                <th>Photo de profil</th>
                 <td> <img src="{{ asset(upload_dir ~ user.imageName ) }}" rel="stylesheet" style="width:20%"> </img></td>
            </tr>
      
            <tr>
                <th>Créé le</th>
                <td>{{ user.created ? user.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mis à jour le</th>
                <td>{{ user.updated ? user.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('backoffice_users') }}" class="btn btn-info">retour à la liste </a>

    <a href="{{ path('backoffice_users_edit', {'id': user.id}) }}" class="btn btn-warning">Mettre à jour</a>

    {{ include('backoffice/users/_delete_form.html.twig') }}
{% endblock %}
